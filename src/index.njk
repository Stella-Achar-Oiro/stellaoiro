    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for post in collections.featuredPosts %}
      <article class="card card-hover">
        {% if post.data.image %}
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}"
             class="w-full h-48 object-cover rounded-lg mb-4" loading="lazy">
        {% endif %}

        <!-- Category Badge -->
        {% if post.data.categories %}
        <div class="mb-3">
          <span class="badge badge-{{ post.data.categories[0] | lower }}">
            {{ post.data.categories[0] }}
          </span>
        </div>
        {% endif %}

        <h3 class="text-xl font-bold mb-3">
          <a href="{{ post.url }}" class="hover:text-brand-blue hover:no-underline">
            {{ post.data.title }}
          </a>
        </h3>

        <p class="text-text-secondary mb-4">
          {{ post.templateContent | excerpt }}
        </p>

        <div class="flex items-center justify-between text-sm text-text-secondary">
          <time datetime="{{ post.date }}">{{ post.date | readableDate }}</time>
          <span>{{ post.templateContent | readingTime }} min read</span>
        </div>

        <a href="{{ post.url }}" class="text-brand-blue hover:text-blue-700 font-semibold mt-4 inline-block">
          Read More â†’
        </a>
      </article>
      {% endfor %}
    </div>

