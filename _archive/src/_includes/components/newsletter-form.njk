<form class="newsletter-form" action="#" method="POST" data-newsletter>
  <div class="flex flex-col sm:flex-row gap-2">
    <input
      type="email"
      name="email"
      placeholder="Enter your email"
      required
      class="flex-1 px-4 py-2 border border-border-gray rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-blue"
    />
    <button
      type="submit"
      class="btn btn-primary whitespace-nowrap"
    >
      Subscribe
    </button>
  </div>
  <p class="text-xs text-text-secondary mt-2">No spam. Unsubscribe anytime.</p>
  <div class="message mt-2 text-sm hidden"></div>
</form>
